<?php
namespace AudioRecorder\Form;

use Laminas\Form\Form;

class AudioRecorderForm extends Form
{
    public function init()
    {
        $this->add([
            'name' => 'title',
            'type' => 'Text',
            'options' => [
                'label' => 'Titre',
            ],
            'attributes' => [
                'required' => true,
            ],
        ]);
        
        $this->add([
            'name' => 'description',
            'type' => 'Textarea',
            'options' => [
                'label' => 'Description',
            ],
        ]);
        
        $this->add([
            'name' => 'item_id',
            'type' => 'Select',
            'options' => [
                'label' => 'Item associé',
                'empty_option' => 'Sélectionner un item...',
            ],
        ]);
    }
}